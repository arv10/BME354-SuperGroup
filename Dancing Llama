// Llama Code
// Arduino code
#include <LiquidCrystal.h>

#include <EEPROM.h>

// initialize the library with the numbers of the interface pins
LiquidCrystal lcd(8, 9, 4, 5, 6, 7);

byte head[8] = {
  0b00101,
  0b00101,
  0b01111,
  0b10111,
  0b11111,
  0b00111,
  0b00111,
  0b00111
};

byte legs[8] = {
  0b01111,
  0b01111,
  0b01111,
  0b01010,
  0b01010,
  0b01010,
  0b01010,
  0b01010
};

byte back[8] = {
  0b11111,
  0b11111,
  0b11111,
  0b00101,
  0b00101,
  0b00101,
  0b00101,
  0b00101
};

byte walkfront[8] = {
  0b01111,
  0b01111,
  0b01111,
  0b01010,
  0b01010,
  0b01111,
  0b00010,
  0b00010
};

byte walkback[8] = {
  0b11111,
  0b11111,
  0b11111,
  0b00101,
  0b00101,
  0b01010,
  0b01010,
  0b10100
};

byte head2[8] = {
  0b10100,
  0b10100,
  0b11110,
  0b11101,
  0b11111,
  0b11100,
  0b11100,
  0b11100
};

byte walkfront2[8] = {
  0b01111,
  0b01111,
  0b01111,
  0b00101,
  0b00101,
  0b01111,
  0b00100,
  0b00100
};

byte walkback2[8] = {
  0b11111,
  0b11111,
  0b11111,
  0b10100,
  0b10100,
  0b01010,
  0b01010,
  0b00101
};

void setup() {

  lcd.begin(16,2);


}

void loop() {
  // scroll 29 positions (string length + display length) to the right
  // to move it offscreen right:
 // scroll one position right:
  
  for (int positionCounter = 0; positionCounter < 7; positionCounter++) {
  lcd.scrollDisplayLeft(); 
    // wait a bit:

  lcd.createChar(0,head);
  lcd.createChar(1,legs);
  lcd.createChar(2,back);
  lcd.createChar(4,walkfront);
  lcd.createChar(5,walkback);

  lcd.setCursor(15,0);
  lcd.print(" ");
  lcd.setCursor(14,0);
  lcd.write(byte(0));
  lcd.setCursor(14,1);
  lcd.write(byte(1));
  lcd.write(byte(2));
  
  delay(500);
  
  lcd.scrollDisplayLeft();
  
  lcd.setCursor(15,0);
  lcd.print(" ");
  lcd.setCursor(14,0);
  lcd.write(byte(0));
  lcd.setCursor(14,1);
  lcd.write(byte(4));
  lcd.write(byte(5));
  
  delay(500);
  }

for (int positionCounter = 0; positionCounter < 7; positionCounter++) {
    // wait a bit:
    
  lcd.scrollDisplayRight();
  
  lcd.createChar(3,head2);
  lcd.setCursor(14,0);
  lcd.print(" ");
  lcd.setCursor(15,0);
  lcd.write(byte(3));
  lcd.setCursor(14,1);
  lcd.write(byte(1));
  lcd.write(byte(2));
  
   delay(500);
  
  lcd.scrollDisplayRight();
 
  lcd.createChar(6,walkfront2);
  lcd.createChar(7,walkback2);
  
  lcd.setCursor(15,0);
  lcd.write(byte(3));
  lcd.setCursor(14,1);
  lcd.write(byte(7));
  lcd.write(byte(6));
  
  delay(500);
  }


}
