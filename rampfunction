void ramp(int slope, int target)
{
  int currentTemp = analogRead(tempPin);
  float TempVolt = currentTemp*5;
  TempVolt = TempVolt/1023;
  float TempCelsius = TempVolt/0.005;
  myPid.Compute();
  analogWrite(heaterPin, Output);
  while(TempCelsius<target)
  {
    delay(10); // checks the slope every .01 second
    float newcurrenttemp=analogRead(tempPin);
    newcurrenttemp=newcurrenttemp*5;
    newcurrenttemp=newcurrenttemp/1023;
    newcurrenttemp=newcurrenttemp/.005;
    float calcslope = (newcurrenttemp-TempCelsius);
    calcslope=calcsclope/.01;
    myPid.Compute();
    if (calcslope>slope)
    {
      analogWrite(heaterPin, LOW);
    }
    else
    {
      analogWrite(heaterPin, Output);
    }
    TempCelsius = newcurrenttemp;
  }
}
